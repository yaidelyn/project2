{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('web/bundles/backend/js/jquery.blockUI.js')}}"></script>
    <script>
        $(function() {

            $('.btn-legi').each(function(){
                $(this).click(function(){
                    $('#content-'+$(this).attr('id')+'').css('display','block');
                    $('#sunmary-'+$(this).attr('id')+'').css('display','none');
                });
            });

            $('.btn-default').each(function(){
                $(this).click(function(){
                    $('#content-'+$(this).attr('id')+'').css('display','none');
                    $('#sunmary-'+$(this).attr('id')+'').css('display','block');
                });
            });



            //upload Fie
            var progress_bar_id = '#progress-wrp'; //ID of an element for response output
            $('.btn-upload').click(function(evt){

                //evt.preventDefault();
                var fd = new FormData();
                var file = $(document).find('input[type="file"]');
                var individual_file = file[0].files[0];
                fd.append("file", individual_file);

                $.ajax({
                    type: "POST",
                    url: "{{path('upload_file_cv')}}",
                    data : fd,
                    contentType: false,
                    cache: false,
                    processData:false,
                    xhr: function(){
                        //upload Progress
                        var xhr = $.ajaxSettings.xhr();
                        if (xhr.upload) {
                            xhr.upload.addEventListener('progress', function(event) {
                                var percent = 0;
                                var position = event.loaded || event.position;
                                var total = event.total;
                                if (event.lengthComputable) {
                                    percent = Math.ceil(position / total * 100);
                                }
                                //update progressbar
                                $(progress_bar_id +" .progress-bar").css("width", + percent +"%");
                                $(progress_bar_id + " .status").text(percent +"%");
                            }, true);
                        }
                        return xhr;
                    },
                    success: function() {
                        location.reload();
                    }
                });
            });

        });//end function
    </script>
