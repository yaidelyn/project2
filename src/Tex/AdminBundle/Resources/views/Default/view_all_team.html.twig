{% extends '::backend.html.twig' %}
{% block title %}List Teams{% endblock %}
  {%  block stylesheets %}
     {{ parent() }}
 {%  endblock %}
   {% block aside %}
      <div class="row">
        <aside class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Search by:
                </header>
                <div class="panel-body">
                    <form action="{{ path('search_user') }}" class="form-inline" id="default" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <input type="text" name="name" id="txt_name" class="form-control" placeholder="Nome">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="skill" id="txt_skill" class="form-control" placeholder="Skill">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="country" id="txt_country" class="form-control" placeholder="Leader">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="city" id="txt_city" class="form-control" placeholder="Progetti">
                                </div>
                            </div>
                        </div>
                        <div class="row rowbtnsearch">
                            <button type="submit" class="btn btn-info btnsearch">Search</button>
                        </div>
                    </form>
                </div>
            </section>
        </aside>
      </div>
      <div class="row">
          <aside class="col-lg-12">
              <section class="panel">
                <div class="panel-body">
                  <div class="gallery-view">
                      {% for dato in datos.team %}
                    <div class="col-lg-4 user-details">
                      <div class="info-view">
                        <h4>{{ dato.name }}</h4>
                        <div class="text-span">
                          <span><strong>Leader: </strong>{{ dato.leader.name }}</span><br>
                           <strong>Skilss:</strong>
                                {% for item in dato.skills %}
                                     <span class="tagteam">{{ item }}</span>
                                {% endfor %}
                        </div>
                      </div>
                        <a href="{{path('view_team',{'id':dato.idteam})}}">
                            <button class="btn btn-success" type="button"><i class="fa fa-eye"></i> View </button>
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{path('update_team',{'id':dato.idteam})}}">
                                <button class="btn btn-info " type="button"><i class="fa fa-refresh"></i> Edit</button>
                            </a>
                            <a href="{{path('delete_team',{'id':dato.idteam})}}">
                                <button class="btn btn-danger " type="button"><i class="fa fa-times"></i> Delete</button>
                            </a>
                        {% endif %}
                    </div>
                      {% endfor %}
                  </div>
                </div>
              </section>
          </aside>
      </div>      
   {% endblock %}
{% block javascripts %}
