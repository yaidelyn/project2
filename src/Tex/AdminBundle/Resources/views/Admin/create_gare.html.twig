                                       <label class="col-lg-3 control-label">Cod.Gara</label>
                                       <div class="col-lg-6">
                                           <div class="input-group m-bot15">
                                               <input id="txt_codgara" class="form-control" value="{{ datos.cod_gara }}" type="text" readonly>

                                           </div>
                                       </div>
                                   </div>
                                   <div class="form-group">
                                       <label class="col-lg-3 control-label">Importo</label>
                                       <div class="col-lg-6">
                                           <div class="input-group m-bot15">
                                               <span class="input-group-addon"><i class="fa fa-euro"></i></span>
                                               <input id="txt_importo" class="form-control" type="text">
