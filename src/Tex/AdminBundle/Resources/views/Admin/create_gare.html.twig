    <script>
        $(function(){
            //datetime picker start
             $(".form_datetime-component").datetimepicker({format: 'yyyy-mm-dd hh:mm:ss'});
            $('#my_multi_select2').multiSelect({
                selectableOptgroup: true
            });
			
			//validate field
			/*$('.cant_figure').keyup(function (){
				this.value = (this.value + '').replace(/[^0-9]/g, '');
			});*/
			
				//Para escribir solo letras
                $('.figure').validCampoFranz(' abcdefghijklmnñopqrstuvwxyzáéiou');

                //Para escribir solo numeros    
                $('.cant_figure').validCampoFranz('0123456789'); 



            //create textfield
            var maxField = 10; //Input fields increment limitation
            var addButton = $('.add_button'); //Add button selector
            var wrapper = $('.field_wrapper'); //Input field wrapper
            var fieldHTML = '<div class="row rowf">' +
                    '<div class="form-group">' +
                    '<div class="col-lg-10">' +
                    '<div class="row">' +
                    '<div class="col-lg-4">' +
                    '<input class="form-control figure" type="text" name="field_name[]" value=""/>' +
                    '</div>' +
                    '<div class="col-lg-2">' +
                    '<input class="form-control cant_figure" name="field_name[]" placeholder="No" type="text">' +
                    '</div>' +
                    '<div class="col-lg-2">' +
                    ' <a  href="javascript:void(0);" class="remove_button" title="Remove field">' +
                    '<img src="{{asset('web/bundles/backend/img/remove-icon.png')}}"/></a>'+
                    '</div>'+
                    '</div>' +
                    ' </div>'+
                    '</div>'+
                    '</div>'; //New input field html
            var x = 1; //Initial field counter is 1
            $(addButton).click(function(){ //Once add button is clicked
                if(x < maxField){ //Check maximum number of input fields
                    x++; //Increment field counter
                    $(wrapper).append(fieldHTML); // Add field html
                }
            });
            $(wrapper).on('click', '.remove_button', function(e){ //Once remove button is clicked
                e.preventDefault();
                $(this).parent().parent().parent().parent().parent('div').remove(); //Remove field html
                x--; //Decrement field counter
            });

            //onclick button
            $('#btn_save').click(function(){
                var role_job = new Array();

             /*   $('.figure').each(function(){
                    //alert($(this).next().next().val());
                    var cant = $(this).parent().children().find('input[class=cant_figure]').val();
                    alert(cant);
                    //role_job.push({'name':$(this).val(),'cantidad':cant} );
                });*/
				
				//var toDate = new Date();
				var txtdate1 = $('#scadenza_gare').val();
				var txtdate2 = $('#scadenza_candi').val();
				//var d1 = new Date(txtdate)
				if (Date.parse(txtdate1) >= Date.parse(txtdate2)) { 
					alert('Date incorrect!!!!');
				}else{
					  if(validateDato()){
                    // alert(searchList());
                    var role_job = new Array();

                    $('.figure').each(function(){
                        //alert($(this).next().next().val());
                        //var cant = $(this).next('input[class=cant_figure]').val();
                        //alert(cant);
                        role_job.push({'name':$(this).val(),'cantidad':1} );
                    });
                    //alert(role_job);
                    var data = {
                        //category: $('#category').val(),
                        title: $('#txt_title').val(),
                        idopere: searchList(),
                        rifbando:$('#txt_bando').val(),
                        scadenza_gare:$('#scadenza_gare').val(),
                        scadenza_candi:$('#scadenza_candi').val(),
                        cod_gara:$('#txt_codgara').val(),
                        importe: $('#txt_importo').val(),
                        objetive: $('#oggetto').val(),
                        tipologia: $('#tipologia').val(),
                        cap_team: $('input[class=figure]').size(),
                        name_rol:role_job
                    }

                    $.ajax({
                        type: "POST",
                        url: "{{path('create_gare')}}",
                        data:{data:data},
                        dataType:"json",
                        beforeSend:function(request) {
                            $.blockUI({ css: {
                                border: 'none',
                                padding: '15px',
                                backgroundColor: '#000',
                                '-webkit-border-radius': '10px',
                                '-moz-border-radius': '10px',
                                opacity: .5,
                                color: '#fff'
                            }});
                        },
                        success: function(response) {
							 jAlert(response.mensaje, 'Alert Dialog');
                        },
                        complete: function(data) {
                            // end of ajax call
                            $.unblockUI();
                        }
                    });
				 }
				}
            });
            //end onclick button
            //crear role para Team
            $('#txt_capteam').keyup(function(){

                $('.comp-form').css({'display':'block','border':'1px solid #bec3c;'});
                var value = $(this).val();
                var html = "";
                for(i=0;i<value;i++){

                    var nomerole = "Nome rol "+(i+1);
                    $('.comp-form').html("");

                    html+='<div class="form-group">' +
                    '<label class="col-lg-3 control-label">'+nomerole+'</label>' +
                    '<div class="col-lg-9">' +
                    '<input type="text" name="title"  class="form-control role">'+
                    '<input type="text"   name="cantidad" placeholder="Cantidad"  class="form-control cantidad input-cant">' +
                    '</div>' +
                    ' </div>';
                }
                $('.comp-form').html(html);

            });

            //multiselect start
            $('#my_multi_select1').multiSelect();
          /*  $('#my_multi_select2').multiSelect({
                selectableOptgroup: true
            });*/

            $('#my_multi_select3').multiSelect({
                selectableHeader: "<input type='text' class='form-control search-input' autocomplete='off' placeholder='search...'>",
                selectionHeader: "<input type='text' class='form-control search-input' autocomplete='off' placeholder='search...'>",
                afterInit: function (ms) {
                    var that = this,
                            $selectableSearch = that.$selectableUl.prev(),
                            $selectionSearch = that.$selectionUl.prev(),
                            selectableSearchString = '#' + that.$container.attr('id') + ' .ms-elem-selectable:not(.ms-selected)',
                            selectionSearchString = '#' + that.$container.attr('id') + ' .ms-elem-selection.ms-selected';

                    that.qs1 = $selectableSearch.quicksearch(selectableSearchString)
                            .on('keydown', function (e) {
                                if (e.which === 40) {
                                    that.$selectableUl.focus();
                                    return false;
                                }
                            });

                    that.qs2 = $selectionSearch.quicksearch(selectionSearchString)
                            .on('keydown', function (e) {
                                if (e.which == 40) {
                                    that.$selectionUl.focus();
                                    return false;
                                }
                            });
                },
                afterSelect: function () {
                    this.qs1.cache();
                    this.qs2.cache();
                },
                afterDeselect: function () {
                    this.qs1.cache();
                    this.qs2.cache();
                }
            });
        //multiselect end
        });
        var temp = new Array();
        var searchList = function(){
            $('.ms-optgroup li').each(function(){
                if($(this).hasClass('ms-selected')){
                    if(!siEsta(temp,$(this).children().html()))
                        temp.push($(this).children().html());
                }
            });
            return temp;
        }

        //buscar elemento for insertion sin repetir
        function siEsta(array,elem){
            var esta = false;
            for(i = 0;i<array.length && !esta;i++){
                if(array[i]=== elem){
                    esta = true;
                }
            }
            return esta;
        }
        var validateDato = function(){
            if($('#txt_title').val()===''){
                $(this).focus();
                return false;
            }
            if($('#txt_cig').val()===''){
                $(this).focus();
                return false;
            }
            if($('#txt_cupf').val()===''){
                $(this).focus();
                return false;
            }
            if($('#txt_capteam').val()===''){
                $(this).focus();
                return false;
            }
            return true;

        }
		//validar campo precio
		function validateExp(field){
			var regexp =  /^\d+([,]?\d{3})?([.]\d{2})$/ ;

			if(regexp.test(field.val())==true){
			   // alert('OKKKK')
			   return true;
			}else{
				return false;
				//alert('No OKKKK');
			}
		}
    </script>

{% endblock %}
