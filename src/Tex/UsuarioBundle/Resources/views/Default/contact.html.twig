{% extends '::frontend.html.twig' %}
{% block title %}{% trans %}Contatti{% endtrans %}{% endblock %}
  {%  block stylesheets %}
    {{ parent() }}
  <link href="{{asset('bundles/backend/css/style-index.css')}}" rel="stylesheet">
  {%  endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&AMP;sensor=false"></script>
    <script>

        $(function(){
            //google map
            function initialize() {
                var myLatlng = new google.maps.LatLng(39.207331, 9.148039);
                var mapOptions = {
                    zoom: 15,
                    scrollwheel: false,
                    center: myLatlng,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                }
                var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
                var marker = new google.maps.Marker({
                    position: myLatlng,
                    map: map,
                    title: 'Hello World!'
                });
            }
            google.maps.event.addDomListener(window, 'load', initialize);


        });




    </script>

{% endblock %}
{% block bodypage %}
    <!--breadcrumbs start-->
    <div class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-sm-4">
                    <h1>{% trans %}Contatti{% endtrans %}</h1>
                </div>
                <div class="col-lg-8 col-sm-8">
                    <ol class="breadcrumb pull-right">
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Pages</a></li>
                        <li class="active">Contact</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!--breadcrumbs end-->
    <!--google map start-->
    <div class="contact-map">
        <div id="map-canvas" style="width: 100%; height: 400px"></div>
    </div>
    <!--google map end-->
    <!--container start-->
    <div class="container">


        <div class="row">
            <div class="col-lg-5 col-sm-5 address">
                <h4>{% trans %}Contatti{% endtrans %}</h4>
                <p>
                    Via La Palma snc,
                    Cagliari, Italy <br/>
                </p>
                <br>
                <p>
                    <b>{% trans %}Telefono{% endtrans %}:</b><span class="muted">+39 070 380 044</span><br/>                    
                    <b>Fax:</b><span class="muted">+39 070 380 044</span><br/>
                    <b>Email:</b><span class="muted">info@te-x.net</span>
                </p>
            </div>
            <div class="col-lg-7 col-sm-7 address">
                <h4>{% trans %}Messaggio{% endtrans %}</h4>
                <div class="contact-form">
                    <form role="form" action="{{ path('page_contact') }}" method="post">
                        <div class="form-group">
                            <label for="name">{% trans %}Nome{% endtrans %}</label>
                            <input type="text" placeholder="" name="name" id="name" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="email">{% trans %}Email{% endtrans %}</label>
                            <input type="text" placeholder="" name="email" id="email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="phone">{% trans %}Telefono{% endtrans %}</label>
                            <input type="text" name="phone" id="phone" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="phone">{% trans %}Messaggio{% endtrans %}</label>
                            <textarea placeholder="" name="message" rows="5" class="form-control"></textarea>
                        </div>
                        <button class="btn btn-danger" type="submit">{% trans %}Inviare{% endtrans %}</button>
                    </form>

                </div>
            </div>
        </div>

    </div>
    <!--container end-->
{% endblock %}

