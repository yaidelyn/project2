{% extends '::baseregister.html.twig' %}
{% block title %}Register{% endblock %}
 {# block stylesheets #}{# endblock #}
   {% block bodyLogin %}
       <!-- page start-->
      <div class="container">     
        <div class="register">
           <div class="col-lg-12">
               <section class="panel">
                   <h2 class="register-heading">Register</h2>
                   <div class="panel-body">
                       <form action="{{ path('create_user') }}" class="form-horizontal" id="default" method="post">
                               <div class="form-group">
                                   <label class="col-lg-3 control-label">Email</label>
                                   <div class="col-lg-6">
                                       <input type="email" name="email" id="txt_email" class="form-control" required>
                                   </div>
                               </div>
                               <div class="form-group">
                                   <label class="col-lg-3 control-label">Password</label>
                                   <div class="col-lg-6">
                                       <input type="password" name="password" id="txt_pasword" class="form-control" required>
                                   </div>
                               </div>
                           <input type="submit" class="finish btn btn-danger" value="Inviare"/>
                       </form>
                   </div>
               </section>
           </div>
       </div>
    </div>
       <!-- page end-->
   {% endblock %}
{% block javascripts %}
    {{ parent() }}
    <!--script for this page-->
    <script>
        //step wizard
        $(function() {
            //Limpiar formulario
            $("#txt_name").val('');
            $("#txt_lastname").val('');
            $("#txt_country").val('');
            $("#txt_email").val('');
            $("#txt_phone").val('');
            $("#txt_mobile").val('');
            $("#txt_address").val('');

        });
    </script>
{% endblock %}