                    <!--<li><input type="text" placeholder=" Search" class="form-control search"></li> -->
                    <li class="space"></li>
                    {% if (datos.login == 0) %}
                        <li><a id="dlogin" class="btn2" href="{{path('login')}}" title="Login"><i class="fa fa-sign-in"></i></a></li>
                        <li><a id="dregister" class="btn2" href="{{path('create_user')}}"><img id="register" title="Register" style="margin-top:-2px" src="{{asset('bundles/backend/img/register.png')}}"></a></li>
                    {% else %}
                        <li><a id="dlogout" class="btn2" href="{{path('User_logout')}}" title="Logout"><i class="fa fa-sign-out"></i></a></li>
                        <li>
						<a id="dperfil" class="btn2" href="{{path('edit_profile')}}" style="margin-top:3px;" title="Profile">
							 {% if (datos.avatar) is defined %}
								<img src="{{asset('web/bundles/backend/img/avatars/mini')}}/{{datos.avatar}}">
								{% else %}
								<img src="{{asset('web/bundles/backend/img/mini-avatar.jpg')}}">
							{% endif %}
							<span class="username">Ciao,{{datos.name}}</span>
						</a>
						</li>
                    {% endif %}
