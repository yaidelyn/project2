                        {% if locale == 'it' %}
                            <span><img src="{{asset('web/bundles/backend/img/it.png')}}"/></span>
                            <span style="margin:0 2px"></span>
                            <a href="{{ path('User_index' , { '_locale' : 'en' }) }}"><img src="{{asset('web/bundles/backend/img/en.png')}}"/></a>
                        {% elseif locale == 'en' %}
